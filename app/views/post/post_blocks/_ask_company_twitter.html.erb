<% random_tweet = item.post_sub_right_blocks.order("RAND()").first %>
<section id='twitter'>
    <div class="ask__wrap">
        <h2  class="title">
          <%= item.name %>
        </h2>
        <% if item.image.attached? %>
        <div class="ask__img">
            <%= image_tag item.image %>
        </div>
        <% end %>
        <a id="twitter_button" class="orange_button" href="#" target="_blank"
          data-text="<%= random_tweet.text %>">
          <span>ask in twitter</span>
        </a>
    </div>
</section>