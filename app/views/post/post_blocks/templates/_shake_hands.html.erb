<% block = PostBlock.where(block_type: "shake_hands").first %>
<section class="shake">
      <div class="container">
        <div class="shake_wrap">
          <div class="shake__row">

            <h3 class="subtitle">
             <%=raw company_name(lang_helper(block, "add_data"), @post.name).gsub('<span>','<span class="orange_text">')%>
            </h3>

            <div class="shake__text">
              <%=raw company_name(lang_helper(block, "text"), @post.name).gsub('<span>','<span class="orange_text">')%>
            </div>

          </div>
        </div>
      </div>
    </section>