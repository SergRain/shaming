<section id="help" class='<% if item.no_padding_bottom %>no_padding_bottom<% end %>'>
      <div class="help__wrap container_small">
        <h2 class="title">
          <%= item.name %>
        </h2>
        <div class="help__text">
        <% item.post_sub_right_blocks.order(position: :asc).each do |block| %>
          <%= raw block.text %>
        <% end %>
        </div>
      </div>
    </section>