<section id="ask">
    <div class="ask__wrap">
        <h2 class="title">
          <%= item.name %>
        </h2>

        <div class="ask__company_info">
          <div>
            <% if @post.logo.attached? %>
                <%= image_tag @post.logo, alt: "logo" %>
            <% elsif !@post.logo_url.blank? %>
                <%= image_tag @post.logo_url, alt: "logo" %>
            <% else %>
            <% end %>
          </div>
          <div>
              <%= raw item.text %>
          </div>
        </div>
    </div>
</section>